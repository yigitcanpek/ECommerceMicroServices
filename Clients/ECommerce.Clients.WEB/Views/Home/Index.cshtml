@{
    ViewData["Title"] = "Home Page";
    int count = 0;
}
@model List<CourseViewModel>
<h2> Kurslar</h2>
<hr />

@if(Model.Any()){
    foreach (CourseViewModel item in Model)
    {
        count++;
        if (count ==1 ||(count%3 ==1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md3 g-4 mb-2>")
        }

        <div class="col">
            <div class="card">
                <img src="@item.StockPictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">@item.ShortDescription</p>
                    <h4 class="text-primary">@item.Price TL</h4>
                    <a asp-controller="Home" asp-action="Detail" class="btn btn-success" asp-route-id="@item.Id" href="#">Detay</a> 
                </div>
            </div>
        </div>

        if (count %3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}